---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
const { frontmatter, url } = Astro.props;
---

<div class="mx-auto max-w-6xl">
  <Nav />
  <div class="mx-auto p-4 mb-8">
    <a class="font-mono text-gray-500">blog / {frontmatter.slug}</a>

    <!-- TITLE -->
    <h1
      class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-gray-900 py-4"
    >
      <span class="block xl:inline">{frontmatter.title}</span>
    </h1>

    <!-- COVER -->
    <p class="text-xl py-2">{frontmatter.excerpt}</p>

    <img src={frontmatter.cover} class="max-h-[600px] w-full py-4" />

    <div class="mx-auto prose prose-xl">
      <strong class="text-lg">{frontmatter.published_at}</strong>
      <slot />
    </div>
  </div>
  <Footer />
</div>
