---
import Logo from "./icons/kairoverse-logo.astro";
import NavItems from "./NavItems.astro";
---

<nav class="py-4">
  <section class="flex px-2 sm:px-4 justify-between items-center">
    <a href="/">
      <Logo class="h-14" color="fill-indigo-500" wingsColor="fill-indigo-400" />
    </a>
    <!-- HIDDEN ON MOBILE DISPLAY -->
    <div class="hidden sm:block">
      <NavItems
        classlist="text-indigo-500 hover:text-blue-500"
      />
    </div>
  </section>

  <!-- HIDDEN ON DESKTOP DISPLAY -->
  <section class="sm:hidden my-2 p-2 bg-indigo-500">
    <NavItems classlist="text-slate-100" />
  </section>
</nav>
