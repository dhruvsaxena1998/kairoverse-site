---
import Analytics from "../components/Analytics.astro";
import Head from "../components/Head.astro";
import Image from "../components/Image.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

import AboutUSContent from "../components/mdx/about.mdx";

import { cacheControl } from "../utils/cache";

const cover = "https://images.unsplash.com/photo-1455849318743-b2233052fcff";

const [key, value] = cacheControl();
Astro.response.headers.set(key, value);
---

<html lang="en">
  <head>
    <Head title="About - Kairoverse" cover={cover} />
  </head>
  <body>
    <div class="mx-auto max-w-6xl">
      <Nav />

      <div class="mx-auto p-4">
        <span class="font-mono text-gray-500">
          <a href="/" class="font-bold text-gray-600">kairoverse</a> / about
        </span>

        <!-- TITLE -->
        <h1
          class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-gray-900 py-4"
        >
          <span class="block xl:inline">About Us</span>
        </h1>

        <!-- COVER -->
        <Image
          src={cover}
          class="max-h-[600px] w-full py-4"
          alt="Cover - Passion lead us here"
        />

        <div class="mx-auto prose prose-xl">
          <strong class="text-lg">09, Oct 2022</strong>

          <article>
            <AboutUSContent />
          </article>
        </div>
      </div>

      <Footer />
    </div>

    <Analytics />
  </body>
</html>
